<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="MuServer\Entity\Character" table="mu_characters">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="index" column="index" type="smallint" nullable="false" unique="true" />
        <field name="name" column="name" type="string" length="10" nullable="false" unique="false" />
        <field name="level" column="level" type="smallint" nullable="false" unique="false" />
        <field name="code" column="code" type="smallint" nullable="false" unique="false" />
        <field name="class" column="class" type="smallint" nullable="false" unique="false" />

        <many-to-many field="inventoryItems" target-entity="MuServer\Entity\Item">
            <join-table name="mu_character_inventory_items">
                <join-columns>
                    <join-column name="character_id" referenced-column-name="id" nullable="false" unique="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="item_id" referenced-column-name="id" nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>